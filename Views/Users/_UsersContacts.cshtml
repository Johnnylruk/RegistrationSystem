@using RegistrationSystem.Domain.Models;
@model List<ContactModel>

<table id="table-contacts-users" class="display" style="width:100%">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Mobile</th>

        </tr>
    </thead>
    <tbody>
            @if(Model != null && Model.Any())
            {
                foreach (var contact in Model)
                {
                    <tr>

                    <th scope="row">@contact.Id</th>
                    <td>@contact.Name</td>
                    <td>@contact.Email</td>
                    <td>@contact.Mobile</td>
                    
                    </tr>
                }
            }
            else
            {
            <tr class="odd">
                <td valign="top" colspan="4">No users has been found.</td>
            </tr>
            }
        
    </tbody>
</table>