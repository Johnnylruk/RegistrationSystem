@using RegistrationSystem.Domain.Models;
@model ContactModel
@{
    ViewData["Title"] = "Confirm Delete";
}


<div class="text-center">

    <br />
    
    <br />

    <h3>Are you sure you want to delete this contact (@Model.Name) ?</h3>
    
    <br />

<a class="btn btn-danger btn-block" role="button" asp-controller="Contacts" asp-action="Delete" asp-route-id="@Model.Id">Confirm Delete</a>
<a class="btn btn-primary btn-block" role="button" asp-controller="Contacts" asp-action="Index">Cancel Delete</a>

</div>
