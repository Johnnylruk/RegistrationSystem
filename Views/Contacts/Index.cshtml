@using RegistrationSystem.Domain.Models;
@model List<ContactModel>
@{
    ViewData["Title"] = "Contacts List";
}

<div class="text-center">

    <div class="d-grid gap-2 d0md-flex justify-content-md-start">
        <a class="btn btn-success" role="button" asp-controller="Contacts" asp-action="Create">Add Contact</a>
    </div>
    <br/>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["SuccessMessage"]
    </div>

    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["ErrorMessage"]
        </div>
    }
    
    <h1 class="display-4">Contacts Lists</h1>
    
</div>

    <table id="table-contacts" class="display" style="width:100%">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Mobile</th>
            <th scope="col"></th>

        </tr>
    </thead>
    <tbody>
            @if(Model !=null && Model.Any())
            {
                foreach (var contacts in Model)
                {
                    <tr>
                        <th scope="row">@contacts.Id</th>
                        <td>@contacts.Name</td>
                        <td>@contacts.Email</td>
                        <td>@contacts.Mobile</td>
                        <td>
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a role="button" class="btn btn-warning me-md-2" type="button" asp-route-id="@contacts.Id" asp-controller="Contacts" asp-action="Edit">Edit</a>
                                <a role="button" class="btn btn-danger" type="button" asp-route-id="@contacts.Id" asp-controller="Contacts" asp-action="DeleteConfirm">Delete</a>
                            </div>
                        </td>

                    </tr>
                }
            }
            else
            {
                <tr class="odd"><td valign="top" colspan="5">No contacts has been found.</td></tr>

            }

    </tbody>
</table>
